<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_consultando"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/colorBackgroundActivity"
    android:gravity="center_horizontal|center_vertical"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:padding="20dp"
    android:elevation="@dimen/material_elevation">

  <ProgressBar
      android:id="@+id/progress_circular"
      android:theme="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:textAlignment="center"
      android:progressTint="@color/colorPrimary"
    />

  <TextView
      android:id="@+id/tv_progreso"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="@string/txt_haciendo_consultas"
      android:textColor="@color/colorPrimary"
      tools:text="@string/txt_haciendo_consultas"
    />

</LinearLayout>